{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@campus-cloud/*": ["projects/campus-cloud/*"],
      "@app/*": ["projects/campus-cloud/app/*"],
      "@libs/*": ["projects/campus-cloud/app/libs/*"],
      "@shared/*": ["projects/campus-cloud/app/shared/*"],
      "@containers/*": ["projects/campus-cloud/app/containers/*"],
      "@controlpanel/*": ["projects/campus-cloud/app/containers/controlpanel/*"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
